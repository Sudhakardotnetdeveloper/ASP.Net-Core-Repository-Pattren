@model IEnumerable<PM.Domain.Category>
@{
    ViewData["Title"] = "CategoryList";
}

<h2>CategoryList</h2>
<hr />
<table class="table table-bordered table-hover ">
    <thead>
        <tr>
            <th>Id</th>
            <th>Code</th>
            <th>Name</th>
            <th>Products</th>
            
        </tr>
        
    </thead>
    <tbody>
        @foreach(var category in Model)
        {
        <tr>
            <td>@category.Id</td>
            <td>@category.Code</td>
            <td>@category.Name</td>
            <td>@string.Join(',',category.Products.Select(p=>p.Name))</td>
        </tr>
        }
    </tbody>
</table>

